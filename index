    <script>
        // ========================================================================
        // TIME DISPLAY
        // ========================================================================
        
        function updateTime() {
            const now = new Date();
            const utcString = now.toISOString().substr(11, 8);
            document.getElementById('currentTime').textContent = utcString + ' UTC';
        }
        setInterval(updateTime, 1000);
        updateTime();

        // ========================================================================
        // TICKER DATA
        // ========================================================================
        
        let tickerItems = [];

        function addToTicker(headline, impact, assets) {
            const time = new Date().toISOString().substr(11, 5);
            tickerItems.unshift({
                time: time,
                text: headline.substring(0, 100),
                impact: impact,
                assets: assets
            });
            
            // Keep only last 20 items
            if (tickerItems.length > 20) {
                tickerItems = tickerItems.slice(0, 20);
            }
            
            updateTicker();
        }

        function updateTicker() {
            const ticker = document.getElementById('tickerContent');
            const doubled = [...tickerItems, ...tickerItems];
            
            ticker.innerHTML = doubled.map(item => `
                <div class="ticker-item">
                    <span class="ticker-time">${item.time} UTC</span>
                    <span class="ticker-text">${item.text}</span>
                    <div class="ticker-impact">
                        ${Array(3).fill(0).map((_, i) => 
                            `<div class="impact-dot ${i < item.impact ? 'active' : ''}"></div>`
                        ).join('')}
                    </div>
                    <span class="ticker-assets">${item.assets || ''}</span>
                </div>
            `).join('');
        }

        // ========================================================================
        // WEBSOCKET CONNECTION
        // ========================================================================
        
        let ws;
        let reconnectInterval;

        function connectWebSocket() {
            const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
            const wsUrl = `${protocol}//${window.location.host}`;
            
            ws = new WebSocket(wsUrl);

            ws.onopen = () => {
                console.log('WebSocket connected');
                document.getElementById('statusDot').classList.add('connected');
                document.getElementById('statusText').textContent = 'LIVE';
                if (reconnectInterval) {
                    clearInterval(reconnectInterval);
                    reconnectInterval = null;
                }
            };

            ws.onmessage = (event) => {
                try {
                    const message = JSON.parse(event.data);
                    handleMessage(message);
                } catch (error) {
                    console.error('Error parsing message:', error);
                }
            };

            ws.onclose = () => {
                console.log('WebSocket disconnected');
                document.getElementById('statusDot').classList.remove('connected');
                document.getElementById('statusText').textContent = 'RECONNECTING...';
                
                if (!reconnectInterval) {
                    reconnectInterval = setInterval(connectWebSocket, 5000);
                }
            };

            ws.onerror = (error) => {
                console.error('WebSocket error:', error);
            };
        }

        // ========================================================================
        // MESSAGE HANDLERS
        // ========================================================================

        function handleMessage(message) {
            switch (message.type) {
                case 'initial':
                    handleInitialData(message);
                    break;
                case 'new_card':
                    handleNewCard(message);
                    break;
                case 'market_update':
                    updateMarketData(message.data);
                    break;
                case 'macro_update':
                    updateMacroData(message.data);
                    break;
            }
        }

        function handleInitialData(message) {
            if (message.market) {
                updateMarketData(message.market);
            }
            if (message.macro) {
                updateMacroData(message.macro);
            }
        }

        function handleNewCard(message) {
            const columnId = getColumnId(message.column);
            const column = document.getElementById(columnId);
            
            if (!column) return;

            const cardHtml = createCardHtml(message.data);
            column.insertAdjacentHTML('afterbegin', cardHtml);

            // Add to ticker
            addToTicker(
                message.data.headline, 
                message.data.impact || 2,
                formatAssets(message.data)
            );

            // Limit cards per column
            const cards = column.querySelectorAll('.card');
            if (cards.length > 12) {
                cards[cards.length - 1].remove();
            }

            column.scrollTop = 0;
        }

        function formatAssets(data) {
            // Simple asset formatter for ticker
            if (data.probNudge && data.probNudge.length > 0) {
                return data.probNudge.map(p => 
                    `${p.label.toUpperCase()}${p.dir === 'up' ? 'â†‘' : 'â†“'}`
                ).join(' ');
            }
            return '';
        }

        function getColumnId(category) {
            const mapping = {
                'breaking': 'breakingColumn',
                'macro': 'macroColumn',
                'geo': 'geoColumn',
                'commodity': 'commodityColumn',
                'market': 'marketColumn'
            };
            return mapping[category] || 'breakingColumn';
        }

        function createCardHtml(data) {
            const impactDots = Array(3).fill(0).map((_, i) => 
                `<div class="impact-dot ${i < (data.impact || 2) ? 'active' : ''}"></div>`
            ).join('');

            const sourceHtml = data.source ? 
                `<div class="card-source">ðŸ“¡ ${data.source}${data.verified ? ' âœ“' : ''}</div>` : '';
            
            const implicationsHtml = data.implications && data.implications.length > 0 ?
                `<ul class="card-implications">
                    ${data.implications.map(imp => `<li>${imp}</li>`).join('')}
                </ul>` : '';

            const tripwireHtml = data.tripwires && data.tripwires.length > 0 ? `
                <div class="tripwire-section">
                    <div class="tripwire-title">âš  TRIPWIRES</div>
                    ${data.tripwires.map(tw => `<div class="tripwire-item">â€¢ ${tw}</div>`).join('')}
                </div>
            ` : '';

            const probHtml = data.probNudge && data.probNudge.length > 0 ? `
                <div class="probability-nudge">
                    ${data.probNudge.map(p => `
                        <div class="prob-item">
                            <span>${p.label}</span>
                            <span class="prob-arrow ${p.dir === 'up' ? 'prob-up' : 'prob-down'}">
                                ${p.dir === 'up' ? 'â†‘' : 'â†“'}
                            </span>
                        </div>
                    `).join('')}
                </div>
            ` : '';

            return `
                <div class="card">
                    <div class="card-timestamp">${data.time} UTC</div>
                    ${sourceHtml}
                    <div class="card-headline">${data.headline}</div>
                    ${implicationsHtml}
                    <div class="card-meta">
                        <div class="meta-item">
                            <span class="meta-label">Impact:</span>
                            <div class="impact-indicator">${impactDots}</div>
                        </div>
                        <div class="meta-item">
                            <span class="meta-label">Horizon:</span>
                            <span class="meta-value">${data.horizon || 'DAYS'}</span>
                        </div>
                    </div>
                    ${tripwireHtml}
                    ${probHtml}
                </div>
            `;
        }

        function updateMarketData(marketData) {
            const marketColumn = document.getElementById('marketColumn');
            
            marketColumn.innerHTML = marketData.map(item => `
                <div class="market-card">
                    <div>
                        <div class="market-label">${item.label}</div>
                        <div class="market-value ${getMarketClass(item.dir)}">
                            ${item.value}
                        </div>
                        <div class="market-change ${getMarketClass(item.dir)}">
                            ${item.change}
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function updateMacroData(macroData) {
            const macroColumn = document.getElementById('macroColumn');
            
            const macroHtml = macroData.map(item => `
                <div class="market-card" style="border-left: 3px solid ${item.tripwireHit ? 'var(--accent-red)' : 'var(--border)'}">
                    <div>
                        <div class="market-label">${item.label}</div>
                        <div class="market-value ${getMarketClass(item.dir)}">
                            ${item.value}
                        </div>
                        <div class="market-change ${getMarketClass(item.dir)}">
                            ${item.change}
                        </div>
                        ${item.tripwireHit ? '<div style="font-size:0.65rem;color:var(--accent-red);margin-top:0.25rem;">âš  TRIPWIRE</div>' : ''}
                    </div>
                </div>
            `).join('');

            // Keep existing cards below macro indicators
            const existingCards = Array.from(macroColumn.querySelectorAll('.card')).map(c => c.outerHTML).join('');
            macroColumn.innerHTML = macroHtml + existingCards;
        }

        function getMarketClass(dir) {
            return dir === 'up' ? 'market-up' : 
                   dir === 'down' ? 'market-down' : 
                   'market-neutral';
        }

        // ========================================================================
        // INITIALIZATION
        // ========================================================================

        connectWebSocket();
    </script>
</body>
</html>
