                        <div class="risk-grid-column">
                            <div class="risk-column-title">INFLATION RISKS</div>
                            <div id="inflationRisks"></div>
                        </div>
                        <!-- Bottom Right: Geopolitical Risks -->
                        <div class="risk-grid-column">
                            <div class="risk-column-title">GEO RISKS</div>
                            <div id="geopoliticalRisks"></div>
